{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "src/",
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "noResolve": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "public"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./typings/**/*.ts"
    ],    
    "exclude": [
        "node_modules",
        "app"
    ]
}